 <h1>
         Codeial / <%= title %>
</h1>
    
    
<section id="feed-posts">
        <h4>Posts</h4>

        <!-- showing posts to singed in user only after - Authentication (locals = object -->
        <% if(locals.user) { %>

        <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>

<!-- second level of Authentication , so nobody can tamper with inspect element and spam the page , only signed user can post -->

<!-- //displaying posts of related user -->
       <div id="posts-list-container">
                <ul>
                        <% for(post of posts){ %>
                        
                       <%- include('_post') -%>
                        
                  <% } %>
                </ul> 
        </div>  
</section> 



